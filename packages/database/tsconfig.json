{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "ESNEXT",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5",
    "esModuleInterop": true,
    "lib": ["DOM", "ES5", "ES2015", "ES2016", "ES2017", "ES2018.Regexp"],
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**"]
}
